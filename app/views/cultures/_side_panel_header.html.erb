<div class="d-flex justify-content-center align-items-center w-100 position-static h-64">
  <%= link_to cultures_path, class: "rounded-button position-left bg-primary" do %>
    <i class="fa-solid fa-arrow-left"></i>
  <%end%>
  <h1 class="fw-bold fs-1 m-0">
    <%= title %>
  </h1>
  <%= link_to culture_path(@culture),
                data: {turbo_method: :delete, turbo_confirm: "Êtes-vous sûr?"},
                class:"rounded-button position-right bg-danger" do %>
    <i class="fa-solid fa-trash"></i>
  <% end %>
</div>
