<% if user_signed_in? %>
  <%= render "cultures_ honeycomb", cultures: @cultures%>
<%else%>
  <div class="bg-white">
    <h1 class="fw-bold text-success">Let it grow</h1>
    <ul>
      <% @cultures.each do |culture| %>
        <%# Ajout lien vers la show %>
        <li><%= link_to culture.name, culture_path(culture.id) %></li>
      <% end %>
    </ul>
  </div>
<%end%>
