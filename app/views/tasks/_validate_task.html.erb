<%= turbo_frame_tag task do %>
  <div class='task-details p-2'>
    <div class="task-description">
      <%= task.description.capitalize %>
    </div>
    <div class="d-flex w-100 gap-2 mt-2">
      <%= link_to valid_task_task_path(task), data: { turbo_method: :patch } do%>
        <li class="picto-bas<%= task.done ? '' : ''%>">
          <i class="<%= task.done ?  "fi fi-ss-check-circle" : "fi fi-rs-check-circle"%>"></i>
        </li>
      <%end%>
      <%= link_to edit_task_path(task.id) do %>
        <div class="picto-bas">
          <i class="fi fi-rr-time-forward"></i>
        </div>
      <% end %>
    </div>
  </div>
<% end %>
