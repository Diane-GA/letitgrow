<%# Carte de météo et conseil %>

<%# Carte de bienvenue %>

<div class = "long-card d-flex justify-content-between">
  <div class = "advice-card d-flex align-items-center">
    <div>
      <div><i class="fi fi-tr-lightbulb-on icon"></i></div>
      <div class= "content"><%= @user.meteo[:advice] %></div>
    </div>
  </div>
  <div class = "meteo_card">
      <div><i class="<%=@user.meteo[:icon]%> icon"></i></div>
      <div class= "content_meteo flex-column">
        <div><%= @user.meteo[:temp] %>°C</div>
        <div><%= @user.meteo[:city] %></div>
      </div>
  </div>
</div>

<div class= "long-card welcome-card mb-3">
  <%= link_to cultures_path do %>
    <div class= "d-flex justify-content-between align-items-center">
      <div>
        <div class = "greeting" >Bonjour <%= current_user.username.capitalize %></div>
        <div>On va voir ce qu'il se passe <br> dans ton jardin ?</div>
      </div>
      <div>
        <i class="fi fi-rr-arrow-small-right"></i>
      </div>
    </div>
  <% end %>
</div>
